<Window x:Class="PanicSQLWPF_Windows.AuthTab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PanicSQLWPF_Windows"
        mc:Ignorable="d"
        Title="AuthTab" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="LoginBox" Text ="{Binding student.Name}" Margin="0,71,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PassBox" PasswordChanged="PassText_TextChanged" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" Command="{Binding LoginCommand}"  HorizontalAlignment="Center" Margin="0,157,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
